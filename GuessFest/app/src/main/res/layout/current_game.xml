<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".currentGame.GameController"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/word_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="47dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Palavra de Jogo"
        android:textColor="#ffffff"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/jump_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer_label" />
    <!--
    <Button
        android:id="@+id/back_button_game"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="236dp"
        android:layout_marginRight="236dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_back"
        android:gravity="left|top"
        android:onClick="backMenu"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/crow_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
-->
    <Button
        android:id="@+id/jump_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:layout_marginBottom="66dp"
        android:background="@drawable/button_jump"
        android:onClick="pass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hit_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_label" />

    <Button
        android:id="@+id/hit_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:layout_marginBottom="58dp"
        android:background="@drawable/button_check"
        android:onClick="hit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/jump_button"
        app:layout_constraintTop_toBottomOf="@+id/crow_image" />

    <TextView
        android:id="@+id/timer_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="197dp"
        android:layout_marginRight="197dp"
        android:layout_marginBottom="126dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="2:00"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/word_label"
        app:layout_constraintEnd_toStartOf="@+id/crow_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/crow_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="302dp"
        app:layout_constraintBottom_toTopOf="@+id/hit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timer_label"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coroa_amarela" />

    <ImageView
        android:id="@+id/team_bar"
        android:layout_width="220dp"
        android:layout_height="69dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/word_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/yellow_bar" />

    <TextView
        android:id="@+id/team_label"
        android:layout_width="218dp"
        android:layout_height="63dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="202dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="TIME"
        android:textColor="#ffffff"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/jump_button"
        app:layout_constraintEnd_toEndOf="@+id/team_bar"
        app:layout_constraintStart_toStartOf="@+id/team_bar"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>